<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:scrollbars="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cadastro de Patrimônio"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvRegister"
        android:gravity="center_horizontal"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Id:"
            android:id="@+id/tvId"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/etId"
            android:layout_row="1"
            android:layout_column="0"
            android:maxLines="1" />

        <ImageButton
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/btRegisterQr"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/scan_icon"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nome do patrimônio:"
            android:id="@+id/tvName"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etName"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Responsável:"
            android:id="@+id/tvResp"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etReponsible"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Local:"
            android:id="@+id/tvLocation"
            android:layout_row="6"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etLocation"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:maxLines="1" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Descrição: "
        android:id="@+id/tvDesc" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etDescript" />

    <Button
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/btRegisterPatrimony"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>




