<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_patrimony"
    android:padding="7dp"
    android:id="@+id/patrimonyContainer"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@drawable/color_background_patrimony"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNamePatrimony"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_weight="0.21"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvReponsiblePatrimony"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_weight="0.21" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescriptionPatrimony"
            android:gravity="left"
            android:textSize="20dp"
             />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cacbd5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLocationPatrimony"
            android:gravity="right|bottom"
            android:textSize="17dp"
            android:layout_weight="0.21" />
    </LinearLayout>
</LinearLayout>