<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:scrollbars="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edição de Patrimônio"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvRegisterEdit" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Id:"
            android:id="@+id/tvIdEdit"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/etIdEdit"
            android:layout_row="1"
            android:layout_column="0"
            android:maxLines="1"
            android:textIsSelectable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nome do patrimônio:"
            android:id="@+id/tvNameEdit"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNameEdit"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Responsável:"
            android:id="@+id/tvRespEdit"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etReponsibleEdit"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Local:"
            android:id="@+id/tvLocationEdit"
            android:layout_row="6"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etLocationEdit"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:maxLines="1" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Descrição: "
        android:id="@+id/tvDescEdit" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etDescriptEdit" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegisterDate" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEditDate" />

    <Button
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:id="@+id/btEditPatrimony"
        android:layout_gravity="center_horizontal"
        android:onClick="btEditPatrimonyClick"
        />

</LinearLayout>